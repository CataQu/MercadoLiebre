<!DOCTYPE html>
<html lang="es">
<!-- head -->
    <%- include('./partials/head') %>
<!-- Body -->

<body>
    <!-- header -->
    <%- include('./partials/header') %>
    <!-- Banner -->
    <div>
        <img src="./img/img-home-banner.jpg" alt="banner" class="banner">
    </div>
    <!-- Main -->
    <main class="main-main">
        <!-- seccion ultima visita -->
        <div class="main-section">
            <h3 class="titles"> Basado en tu Ãºltima visita</h3>
            <section class="section">
                <% for (let i = 0; i < productsArray.length; i++){ %> 
                    <article class="articulos">
                        <a href="/products/detail/<%=productsArray[i].id%>">
                        <div class="img-art">
                            <img src=<%= productsArray[i].img %> name=<%= productsArray[i].name %>>
                        </div>
                        <div class="cuerpo-articulo">
                            <div class="price-discount">
                                <p class="price"><%= productsArray[i].price %> </p>
                                <p class='discount-description'><%= productsArray[i].discount %></p>
                                <div class="shipping"><i class="fas fa-truck"></i>
                                </div>
                            </div>
                            <h5 class='description'> <%= productsArray[i].description %></h5>
                        </div></a>
                    </article>
                    <% } %> 
            </section> 
        <!-- seccion de oferta -->
        <div class="main-section">
            <h3 class="titles"> Ofertas</h3>
            <section class="section">
            <% for (let i = 0; i < productsArray.length; i++){ %> 
                <article class="articulos">
                    <div class="img-art">
                        <img src=<%= productsArray[i].img %> name=<%= productsArray[i].name %>>
                    </div>
                    <div class="cuerpo-articulo">
                        <div class="price-discount">
                            <p class="price"><%= productsArray[i].price %> </p>
                            <p class='discount-description'><%= productsArray[i].discount %></p>
                            <div class="shipping"><i class="fas fa-truck"></i>
                            </div>
                        </div>
                        <h5 class='description'> <%= productsArray[i].description %></h5>
                    </div>
                </article>
                <% } %> 
            </section>
        </div>
    </main>
<!-- footer -->
<%- include('./partials/footer') %>
</body>

</html>
