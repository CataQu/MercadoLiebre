<!DOCTYPE html>
<html lang="es">
<!-- head -->
<%- include('../partials/head') %>
<!-- Body -->

<body>
    <!-- header -->
    <%- include('../partials/header') %>
    <!-- Registro -->
    <form action="/registrarse" method="post" class="form">
        <div class="formulario">
            <!-- <label for="name" class = "labels">Nombre y apellido</label> -->
            <input type="text" name="name" class="form-fields" id="name" minlength=5 placeholder="Nombre y apellido" required>
        </div>
        <div class="formulario">
            <!-- <label for="user" class = "labels">Nombre de usuario</label> -->
            <input type="text" name="user" class="form-fields" id="user" minlength=5 placeholder="Nombre de usuario" required>
        </div>
        <div class="formulario">
            <!-- <label for="dob" class = "labels">Fecha de nacimiento</label> -->
            <input type="date" name="dob" class="form-fields" id="dob">
        </div>
        <div class="formulario">
            <!-- <label for="address" class = "labels">Domicilio</label> -->
            <input type="text" name="address" class="form-fields" id="address" minlength=10 placeholder="Domicilio" required>
        </div>
        <div class="formulario">
            <!-- <label for="password" class = "labels">Contraseña</label> -->
            <input type="password" name="password" id="password" class="form-fields" minlength=8
                placeholder="Elegí una contraseña" required>
        </div>
        <div class="formulario">
            <!-- <label for="password" class = "labels">Confirmar contraseña</label> -->
            <input type="password" name="password" id="password" class="form-fields" minlength=8
                placeholder="Confirmá tu contraseña"required>
        </div>
        <div class="bottom-forms">
            <div class="formulario-p">
                <p>Qué te gustaría hacer en MercadoLiebre?</p>
                <div class="perfil">
                    <div class="radio-buttons">
                        <input type="radio" name="perfil" id="comprar" value="comprar">
                        <label for="comprar">Comprar</label>
                        <input type="radio" name="perfil" id="vender" value="vender">
                        <label for="vender">Vender</label>
                    </div>
                </div>
            </div>
            <div class="formulario-p">
                <p>Categorias de interés</p>
                <div class="perfil">
                    <div class="checkbox">
                        <div><input type="checkbox" name="categories" id="electro" value="electro">
                            <label for="electro">Electro</label></div>
                        <div><input type="checkbox" name="categories" id="moda" value="moda">
                            <label for="moda">Moda</label></div>
                        <div><input type="checkbox" name="categories" id="hogar" value="hogar">
                            <label for="hogar">Hogar</label></div>
                        <div><input type="checkbox" name="categories" id="jugueteria" value="jugueteria">
                            <label for="jugueteria">Juguetería</label></div>
                        <div><input type="checkbox" name="categories" id="sana" value="sana">
                            <label for="sana">Vida Sana</label></div>
                    </div>
                </div>
            </div>
            <div class="formulario">
                <label for="profile-pic">Subí tu foto de perfil</label>
                <div class="perfil">
                    <div class="profile-pic">
                        <input type="file" name="profile-pic" id="profile-pic" class="profile-button">
                    </div>
                </div>
            </div>
        </div>
        <div class="botones">
            <button type="submit" class="send-button">Enviar</button>
            <button type="reset" class="reset-button">Borrar</button>
        </div>
    </form>
<!-- footer -->
<%- include('../partials/footer') %>
</body>

</html>